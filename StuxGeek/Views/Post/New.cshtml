@model StuxGeek.Models.Post
@{
    ViewBag.Title = "New";
}

<h2>New Post</h2>

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Content)
        @Html.TextBoxFor(x => x.Content, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Category)
        @Html.TextBoxFor(x => x.Category, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(x => x.Tag)
        @Html.TextBoxFor(x => x.Tag, new { @class = "form-control" })
    </div>

    <input type="submit" value="Submit Post" name="SubmitPost" class="btn btn-success form-control max" />
}